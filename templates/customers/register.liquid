<div class="grid">
  <div class="grid__cell hide__mobile" style="background: url({{ 'log_in_serum.webp' | file_url }}); background-repeat: no-repeat; background-size: cover; background-position: center;">
    <div class="spacer" style="height: 70vh;"></div>
  </div>
  
  <div class="grid__cell">
    <div id="customer-register" class="section container valign-middle talign-middle" data-cc-animate>
      <div id="register" class="small-form-column">
        <h1 class="page-title">{{ 'customer.register.title' | t }}</h1>
    
        {% form 'create_customer' %}
    
        {% if form.errors %}
        <div class="notification errors">
          {{ form.errors | default_errors }}
        </div>
        {% endif %}
    
        <div id="first_name" class="input-row">
          <!--<label for="first_name" class="label">{{ 'customer.register.first_name' | t }}</label>-->
          <input type="text" value="" name="customer[first_name]" id="first_name" placeholder="{{ 'customer.register.first_name' | t }}" class="text" size="30" />
        </div>
    
        <div id="last_name" class="input-row">
          <!--<label for="last_name" class="label">{{ 'customer.register.last_name' | t }}</label>-->
          <input type="text" value="" name="customer[last_name]" id="last_name" placeholder="{{ 'customer.register.last_name' | t }}" class="text" size="30" />
        </div>
    
        <div id="email" class="input-row">
          <!--<label for="email" class="label">{{ 'customer.register.email' | t }}</label>-->
          <input type="email" value="" name="customer[email]" id="email" placeholder="{{ 'customer.register.email' | t }}" class="text" size="30" />
        </div>
    
        <div id="password" class="input-row">
          <!--<label for="password" class="label">{{ 'customer.register.password' | t }}</label>-->
          <input type="password" value="" name="customer[password]" id="password" placeholder="{{ 'customer.register.password' | t }}" class="password text" size="30" />
        </div>
    
        <div class="input-row">
          <input class="btn btn-submit" type="submit" value="{{ 'customer.register.submit' | t }}" />
          <div style="margin: 50px 0px 1px 0px;">
            {{ 'customer.general.or' | t }}
          </div>
          
          <span class="note"><a class="standard-link" href="{{ routes.root_url  }}">{{ 'customer.register.cancel' | t }}</a></span>
        </div>
    
        {% endform %}
    
      </div><!-- #register -->
    </div><!-- #customer-register -->
  </div>
</div>

<style>
  .btn-submit {
    border-radius: 0px !important;
    border: solid 1px #333 !important;
    background: transparent !important;
    color: #333 !important;
  }
  .btn-submit:hover {
    background: #333 !important;
    color: #fff !important;
  }
  .grid {
    border-top: solid 1px #333;
    border-bottom: solid 1px #333;
  }
  .grid__cell:first-child {
      border-right: solid 1px #333;
  }
  .standard-link {
    border-bottom: none;
  }
  .grid *{
    font-size: 16px;
  }
  input[type="text"]::placeholder,
  input[type="email"]::placeholder,
  input[type="password"]::placeholder {
    color: #ababab;
    font-size: 14px;
    font-weight: 400;
  }
  input[type="text"],
  input[type="email"],
  input[type="password"] {
    background: #f4f3ef;
    border: none;
    width: 320px;
  }
  .talign-middle *{
    text-align: center;
  }
  .valign-middle {
    margin-top: 50% !important;
    -ms-transform: translateY(-50%);
    transform: translateY(-50%);
  }
  
  .grid {
    display: flex;
	flex-flow: row wrap;
	justify-content: center;
	margin: 0;
  }
  .grid__cell {
	flex: 1;
	border: 0px solid gray;
	padding: 0px;
	&:first-child { margin-left: 0; }
	&:last-child { margin-right: 0; }
	
}


@media screen and (max-width: 980px) {
  .hide__mobile {
    display: none;
  }
  .grid .grid_cell {
    flex-basis: 40%;
		&:nth-last-child(2) {
			margin-right: 0;
		}
		&:last-child {
			flex-basis: 100%;
			margin: 0;
		}
	}
}

@media screen and (max-width: 680px) {
	.grid .grid_cell {
		flex-basis: 100%;
	}
}
</style>